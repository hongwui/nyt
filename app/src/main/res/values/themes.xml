<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.NYT" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorAccent">#000000</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/status_bar_bg_color</item>
        <item name="backgroundColor">@color/bg_color</item>
        <item name="fontFamily">@font/my_font</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:textColor">@color/textview_color</item>
    </style>

    <style name="TextViewStyle.TitleText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewStyle.HeaderText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:paddingHorizontal">16dp</item>
    </style>

</resources>